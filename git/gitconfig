[init]
	defaultBranch = main
[user]
	name = Chris Mannina
	email = chrismannina@outlook.com
[alias]
	st = status
	co = checkout
	br = branch
	cm = commit -m
	l = log --oneline --graph --decorate
	p = push
	pl = pull
	d = diff
	ds = diff --staged
	a = add
	aa = add .
	ac = !git add -A && git commit -m
	undo = reset --soft HEAD~1
	unstage = reset HEAD --
	nuke = reset --hard HEAD
[push]
	default = simple
[pull]
	rebase = true
